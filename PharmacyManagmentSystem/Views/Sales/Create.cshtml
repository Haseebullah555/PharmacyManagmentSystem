    <script>
        $(function () {
            $('#medicineID').change(function () {
                var selectedMedicineID = $(this).val();
                var $amountInput = $('#amount');

                if (selectedMedicineID !== '') {
                    $.ajax({
                        url: '/Sales/GetAmount',
                        type: 'POST',
                        data: { medicineID: selectedMedicineID },
                        success: function (data) {
                            $amountInput.val(data);
                        }
                    });
                } else {
                    $amountInput.val('');
                }
            });
        });
    </script>
